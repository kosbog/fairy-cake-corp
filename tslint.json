{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [
                180
            ]
        },
        "member-ordering": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "jsx-single"
        ],
        "eofline": true,
        "align": [
            true,
            "parameters",
            "statements",
            "members",
            "elements",
            "arguments"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "array-type": [
            true,
            "array"
        ],
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-typecast",
            "check-decl",
            "check-module",
            "check-separator"
        ],
        "member-access": false,
        "ordered-imports": false,
        "class-name": true,
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case"
        ],
        "no-consecutive-blank-lines": true,
        "no-duplicate-imports": true,
        "no-irregular-whitespace": true,
        "no-var-requires": false,
        "no-console": false,
        "no-debugger": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}